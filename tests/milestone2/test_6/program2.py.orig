class Person:
    def __init__(self, name):
        self.name = name

    def get_name(self):
        return self.name

    def get_name_uppercase(self):
        return self.name.upper()

    def get_greeting(self):
        return f"Hello, my name is {self.name}!"
    # Modify the name directly
    def set_name(self, new_name):
        self.name = new_name
        
def dummy_function(name):
    return len(name) * 2
    
def slice_me():
    p = Person("Nobody")
    indefinite_pronouns = ["Everybody", "Somebody", "Anybody"]
    # Call the dummy function and assign the result to a variable
    dummy_result = dummy_function(p.name)
    indefinite_pronouns.append(dummy_result)
    print(p.get_greeting())
    # Modify the name using the setter method
    p.set_name("John Doe")
    print(p.get_greeting())
    return p.name # slicing criterion
    
slice_me()

